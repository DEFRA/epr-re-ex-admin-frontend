{% extends 'layout.njk' %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl">All organisations</h1>

      <form method="post" class="app-filters">
        <h2 class="govuk-heading-m">Search for an organisation by</h2>
        <input type="hidden" name="crumb" value="{{ crumb }}" />
        <div class="govuk-form-group">
          {{ govukInput({
            label: {
              text: "Organisation name",
              classes: "govuk-label--s"
            },
            id: "search",
            name: "search",
            type: "search",
            value: searchTerm,
            autocomplete: "off",
            classes: "govuk-input--width-20"
          }) }}
        </div>
        <div class="govuk-button-group">
          {{ govukButton({
            text: "Search"
          }) }}
          {% if searchTerm %}
            <a href="/organisations" class="govuk-button govuk-button--inverse">Clear search and view all organisations</a>
          {% endif %}
          </div>
      </form>

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <div class="govuk-body" data-testid="app-page-body">

        {# Render a table when organisations data is provided, otherwise show a message #}
        {% if organisations and organisations.length %}
          {% if searchTerm %}
            <h2 class="govuk-heading-l">{{ organisations.length }} result{% if organisations.length != 1 %}s{% endif %} found</h2>
          {% endif %}

          {% set tableRows = [] %}
          {% for org in organisations %}
            {% set orgId = org.orgId %}

            {# build cells as objects expected by govukTable #}
            {% set nameCell = { text: org.name } %}
            {% set orgIdCell = { text: orgId } %}
            {% set registrationNumberCell = { text: org.registrationNumber } %}

            {% set regulatorCell = { text: org.regulator | upper } %}
            {% set statusCell = { html: govukTag({
              text: org.status
            }) } %}
            {% set actionsHtml = '<a class="govuk-link govuk-link--no-visited-state" href="/organisations/' ~ org.id ~ '">Edit</a>' %}
            {% set actionsHtml = actionsHtml ~ '<br><a class="govuk-link govuk-link--no-visited-state" href="/defra-forms-submission/' ~ org.id ~ '">View submission data</a>' %}
            {% set actionsHtml = actionsHtml ~ '<br><a class="govuk-link govuk-link--no-visited-state" href="/system-logs?referenceNumber=' ~ org.id ~ '">View system logs</a>' %}
            {% set actionCell = { html:  actionsHtml } %}

            {% set row = [ nameCell, orgIdCell, registrationNumberCell, regulatorCell, statusCell, actionCell ] %}
            {% set tableRows = tableRows.concat([row]) %}
          {% endfor %}

          {{ govukTable({
            captionClasses: "govuk-table__caption--m",
            firstCellIsHeader: true,
            head: [
              { text: "Name" },
              { text: "Organisation ID" },
              { text: "Registration Number" },
              { text: "Regulator" },
              { text: "Status" },
              { text: "Actions" }
            ],
            rows: tableRows
          }) }}

        {% else %}
          {% if searchTerm %}
            <h2 class="govuk-heading-l">0 results found</h2>
            {{ govukInsetText({
              text: "No organisations found matching '" + searchTerm + "'. Try searching with a different name or check your spelling."
            }) }}
          {% else %}
            {{ govukInsetText({ text: "No organisations found." }) }}
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>

{% endblock %}
